<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Ventas">

    <TextView
        android:id="@+id/lblVentas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Venta"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Spinner de clientes -->
    <Spinner
        android:id="@+id/spCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/lblVentas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EditText dirección -->
    <EditText
        android:id="@+id/etDireccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Dirección de envío"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/spCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lista de productos disponibles -->
    <TextView
        android:id="@+id/lblProductosDisponibles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos disponibles"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etDireccion"
        app:layout_constraintStart_toStartOf="parent"/>

    <ListView
        android:id="@+id/lvProductosDisponibles"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/lblProductosDisponibles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lista de productos agregados -->
    <TextView
        android:id="@+id/lblProductosSeleccionados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos en la venta"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/lvProductosDisponibles"
        app:layout_constraintStart_toStartOf="parent"/>

    <ListView
        android:id="@+id/lvProductosSeleccionados"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/lblProductosSeleccionados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Total de la venta -->
    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 0.0"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/lvProductosSeleccionados"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Botón guardar venta -->
    <Button
        android:id="@+id/btnGuardarVenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Venta"
        android:layout_marginTop="8dp"
        android:backgroundTint="#071DDB"
        app:layout_constraintTop_toBottomOf="@id/tvTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
